@model IEnumerable<TracNghiemOnline.Models.Monhoc>

<h2>Danh sách môn học</h2>

<p>
    <a asp-action="Add" class="btn btn-primary">Thêm mới</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên môn học</th>
            <th>Mô tả</th>
            <th>Lớp học</th> <!-- Thêm cột mới cho tên lớp -->
        </tr>
    </thead>
    <tbody>
        @foreach (var monhoc in Model)
        {
            <tr>
                <td>@monhoc.Idmon</td>
                <td>@monhoc.Tenmon</td>
                <td>@monhoc.Mota</td>
                <td>@(monhoc.IdlopNavigation != null ? monhoc.IdlopNavigation.Tenlop : "")</td> <!-- Hiển thị tên lớp -->
                <td>
                    <a asp-action="Details" asp-route-id="@monhoc.Idmon">Chi tiết</a> |
                    <a asp-action="Edit" asp-route-id="@monhoc.Idmon">Chỉnh sửa</a> |
                    <a asp-action="Delete" asp-route-id="@monhoc.Idmon">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
