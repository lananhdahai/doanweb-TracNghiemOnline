@page
@model LoginModel


    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 m-auto border border-3  rounded-4 register">
                <section>
                    <form id="account" method="post">
                    <h2 class="text-center fw-bold text-white">Login</h2>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <small></small>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="form-label">Password</label>
                            <small></small>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="checkbox mb-3">
                            <label asp-for="Input.RememberMe" class="form-label text-white">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                        </div>
                        
                    <div class="d-flex justify-content-between align-items-center mb-3 my-3">
                          <a  class="btn  bg-white fs-6 fw-bold " asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Đăng kí</a>

                        <div>
                            <span class="fs-4 text-white">Cách khác</span>
                            <a href=""> <i class="fa-brands fa-facebook fa-spin fa-spin-reverse fs-2 " style="color: yellow;"></i></a>
                            <a href=""> <i class="fa-brands fa-google fa-spin fs-2"></i></a>
                        </div>

                    </div>
                    </form>
             
                </section>
            </div>

         
        </div>

    </div>
  
  

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
